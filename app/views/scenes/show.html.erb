                      $('#roomfooter<%= room.id %>').slider('setValue',rall<%= room.id %><%= lightbulb.id %>.getValue())
                      $.ajax({
                        url: 'http://192.168.1.6/api/2c52addb187cad2f12b4c8e33012b2b7/lights/' + <%= find_id(lightbulb.control_id) %> + '/state',
                        type: 'PUT',
