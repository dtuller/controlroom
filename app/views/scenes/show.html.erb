                      formatter: function(value) {
                        return  (value/254*100).toFixed(0) + "%";
                      },
                      tooltip_position: "bottom"
                    })
                    .on('change', RGBChange<%= room.id %><%= lightbulb.id %>)
                    .data('slider');
                  <% end %>
                <% end %>
              </script>

            </div>
          <% end %>
        </div>
        <div class="panel-body allstyle"></div>
      </div>
    </div>
