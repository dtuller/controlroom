              <button
                class="jscolor {valueElement:null,value:'cc7733', width: 150, height:30, padding:0, shadow:false, borderWidth:0, onFineChange:'allcolorupdate(this)', borderColor:'#000', insetColor:'#000', backgroundColor:'#666'}, btn"
