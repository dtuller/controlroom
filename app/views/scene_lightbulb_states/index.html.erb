<div class="page-header">
  <h1>
    Scene lightbulb states
    <a href="/scene_lightbulb_states/new" class="btn btn-lg btn-success">New Scene lightbulb state</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Scene</th>
        <th>State</th>
        <th>Lightbulb</th>
        <th>Actions</th>
      </tr>

      <% @scene_lightbulb_states.each do |scene_lightbulb_state| %>
      <tr>
        <td><%= scene_lightbulb_state.scene_id %></td>
        <td><%= scene_lightbulb_state.state_id %></td>
        <td><%= scene_lightbulb_state.lightbulb_id %></td>
        <td>
          <a href="/scene_lightbulb_states/<%= scene_lightbulb_state.id %>" class="btn btn-primary">Show</a>
          <a href="/scene_lightbulb_states/<%= scene_lightbulb_state.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_scene_lightbulb_state/<%= scene_lightbulb_state.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
