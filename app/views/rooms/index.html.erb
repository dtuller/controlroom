<div class="page-header">
  <h1>
    Rooms
    <a href="/rooms/new" class="btn btn-lg btn-success">New Room</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @rooms.each do |room| %>
      <tr>
        <td><%= room.user_id %></td>
        <td><%= room.name %></td>
        <td>
          <a href="/rooms/<%= room.id %>" class="btn btn-primary">Show</a>
          <a href="/rooms/<%= room.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_room/<%= room.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
